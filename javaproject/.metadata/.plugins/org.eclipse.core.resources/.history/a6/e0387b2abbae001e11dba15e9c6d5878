package day0109;

import java.util.Scanner;

public class Book175_14 {

	public static void main(String[] args) {
		
		int stu;
		String [] name;
		int [] score;
		
		int tot=0;
		double avg=0;
		
		Scanner sc=new Scanner(System.in);
		
		System.out.println("인원수를 입력하시오");
		stu=Integer.parseInt(sc.nextLine());
		
		//인원수만큼 배열로 할당
		
		name=new String[stu];
		score=new int[stu];
		
		//인원수만큼 데이터 입력
		for(int i=0;i<stu;i++)
		{
			System.out.println((i+1)+"번지 이름");
			name[i]=sc.nextLine();
			System.out.println((i+1)"번지 점수");
			score[i]=Integer.parseInt(sc.nextLine());
			
			//총점
			tot+=score[i];
		}
		
		avg=(double)tot/stu;
		
		System.out.println("번호\t이름\t점수");
		System.out.println("==========================");
		
		
		for(int i=0;i<stu;i++)
		{
			System.out.println(i+1+"\t"+name[i]+"\t"+score[i]);
		}
		
		
		
		
		
		
		
		
		
		/*int[] scores = {12,52,69};
		
		int sum=0;
		for(int i=0;i<scores.length;i++)
		{
			sum+=scores[i];
		}
		
		System.out.println("총합:"+sum);*/
	}

}

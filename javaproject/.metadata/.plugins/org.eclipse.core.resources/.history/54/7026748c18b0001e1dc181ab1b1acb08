package day0111;

//객체의 속성: 인스턴스 변수     객체의 동작: 클래스의 메서드
//Object: 객체, 실제로 존재하는 사물(핸드폰, 자동차, 붕어빵....)
//class: 객체를 정의해 놓은것, 객체를 생성하기 위해 존재(설계도....)
//Instance: 클래스에서 만들어진 객체를 인스턴스라고 한다

class Person{
	private String name;
	private int age;
	private String hp;
	private String addr;
	
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public int getAge() {
		return age;
	}
	public void setAge(int age) {
		this.age = age;
	}
	public String getHp() {
		return hp;
	}
	public void setHp(String hp) {
		this.hp = hp;
	}
	public String getAddr() {
		return addr;
	}
	public void setAddr(String addr) {
		this.addr = addr;
	}

	
}

public class ObjectReview_01 {


	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Person p1 = new Person();
		//p1.name="홍길동"; private인스턴스 변수는 생성을 해도 변수에 접근이 안됨
		
		p1.setName("박범수");
		p1.setAddr("관악구");
		p1.setAge(25);
		p1.setHp("010-8987-1234");
		
		String name=p1.getName();
		int age=p1.getAge();
		String addr=p1.getAddr();
		String hp=p1.getHp();
		

	}

}
